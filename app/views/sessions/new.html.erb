

<center>
<p>Car Log will help you track your car maintenance expenses.</p>

<h4>Please log in</h4>
<div class='well' style="width: 300px">
  <%= form_tag '/login' do %>
    <div class='control-group'>
      <%= label_tag :username %>
      <%= text_field_tag :username, params[:username] || "" %>
    </div>
    <div class='control-group'>
      <%= label_tag :password %>
      <%= password_field_tag :password, params[:password] || "" %>
    </div>
    <%= submit_tag "Login", class: 'btn btn-success' %>
  <% end %>
</div>
No account? <%= link_to "Register here.", register_path %>
</center>
